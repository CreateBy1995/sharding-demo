<mapper namespace="pers.sharding.dao.mapper.UsersMapper">


    <select id="listByIds" resultType="pers.sharding.dao.domain.Users">
        SELECT * FROM users WHERE id  in
        <foreach collection="ids" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>

    </select>


